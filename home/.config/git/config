[alias]
	s = status
	c = commit
	co = checkout
	last = log -1 HEAD
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	tg = tag --sort=-creatordate --format='* %(objectname:short) %(align:width=13,position=left)%(refname:lstrip=2)%(end) %(align:width=28)%(creatordate:iso8601)%(end) %(align:width=20,position=left)(%(authorname))%(end) %(subject)'
	cat = "!git show \"$1:$2\" #"
	lb = branch --sort=-authordate --format '%(align:width=18)%(authordate:format:%Y-%m-%d %H:%M)%(end) %(align:width=14,position=right)%(authordate:relative)%(end)  %(objectname:short)  %(HEAD) %(if)%(HEAD)%(then)%(color:green)%(end)%(refname:short)'
	changed = diff --name-only

[branch]
	sort = -committerdate

[color]
	ui = true

[column]
	ui = auto

[commit]
	gpgsign = true
	verbose = true

[core]
	autocrlf = input
	editor = nvim
	excludesfile = ~/.config/git/ignore
	fsmonitor = true
	untrackedCache = true
	safecrlf = true

[credential "https://github.com"]
	username = flrgh

[credential "https://gist.github.com"]
	username = flrgh

[diff]
	algorithm = histogram
	compactionHeuristic = true
	colorMoved = plain
	noprefix = true
	renames = true

[fetch]
	all = true
	prune = true
	pruneTags = true

[gpg]
	format = ssh

[grep]
	patternType = extended

[help]
	autocorrect = prompt

[init]
	defaultBranch = main
	templatedir = ~/.config/git/template

# delta is not used by default but optionally enabled in
# ./scripts/update-git-config if it is found to be installed
[delta]
	decorations = true
	hunk-header-style = omit-code-fragment
	line-numbers = true
	# use n and N to move between diff sections
	navigate = true
	side-by-side = true

	# just a little brighter/more contrast-y than the defaults
	plus-style = syntax "#003800"
	minus-style = syntax "#3f0001"

[merge]
	conflictstyle = zdiff3
	tool = nvim -d

[mergetool]
	prompt = false

[mergetool "nvim"]
	cmd = "nvim -f -c \"Gdiffsplit!\" \"$MERGED\""

[pull]
	ff = only

[push]
	autoSetupRemote = true
	default = simple
	followTags = true

[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true

[rerere]
	autoupdate = true
	enabled = true

[url "https://github.com/"]
	insteadOf = git://github.com:

[user]
	name = Michael Martin
	email = flrgh@protonmail.com

[tag]
	gpgsign = true
	sort = version:refname

[include]
	path = ~/.config/git/config.local
