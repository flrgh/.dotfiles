__complete_PATH_bins() {
    local -i reset=0
    if ! shopt -q nullglob; then
        shopt -s nullglob
        reset=1
    fi

    local name=${2##*/}
    local path matches

    local IFS=$':'
    COMPREPLY=()

    for path in $PATH; do
        matches=( "$path/$name"* )
        COMPREPLY+=( "${matches[@]##*/}" )
    done

    if (( reset == 1 )); then
        shopt -u nullglob
    fi
}

complete -F __complete_PATH_bins bin-path

