#!/usr/bin/env bash

set -euo pipefail

readonly DATA=$HOME/.local/state/nvim/lua-lsp
readonly LOG=$HOME/.local/var/log/lua-lsp
mkdir -p "$LOG"
mkdir -p "$DATA"

exec "$HOME"/.local/libexec/lua-language-server/bin/lua-language-server \
    --logpath="$LOG" \
    --metapath="$DATA" \
    --locale=en-us \
    "$@"
