#!/usr/bin/env bash
# shellcheck source-path=SCRIPTDIR/../share/ineed

set -euo pipefail

declare -rgx INEED_CLI=1
declare -rgx INEED_ROOT="$HOME/.local/share/ineed"
declare -rgx INEED_STATE="$HOME/.local/state/ineed"

source "$INEED_ROOT/lib.sh"
source "$INEED_ROOT/cli.sh"

# implement:
#
# * get-installed-version
# * get-latest-version
# * get-asset-download-url
# * install-asset
# * info


declare -rgxa INEED_FUNCTIONS=(
    is-installed
    get-installed-version
    get-latest-version
    get-asset-download-url
    install-asset
    info
)

main() {
    local -r cmd=${1:-}

    if [[ -z ${cmd:-} ]]; then
        usage::cmd
        exit 1
    fi

    shift

    run-command "$cmd" "$@"
}

main "$@"
