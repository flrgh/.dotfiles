#!/usr/bin/env bash

set -euo pipefail

readonly URL=${1?URL required}

FNAME=${2:-}
if [[ -z $FNAME ]]; then
    FNAME=$(basename "$URL")
    FNAME=${FNAME%\?*}
fi

readonly DEST="$HOME/.cache/$FNAME"

log() {
	printf "$@" > /dev/stderr
}

log "URL: $URL\n"
log "Destination: $DEST\n"

log "Fetching ... "

if [[ -e $DEST ]]; then
	log "already cached.\n"
	printf "%s\n" "$DEST"
	exit 0
fi

curl \
	--silent \
	-f \
	-L \
	-o "$DEST" \
	--url "$URL"

log "done.\n"

printf "%s\n" "$DEST"
