#!/usr/bin/env bash

set -euo pipefail

readonly PREFIX=$HOME/.local

VERSION=${1:-latest}


if [[ $VERSION == latest ]]; then
    VERSION=$(
        curl \
            -s \
            -o- \
            --url https://www.lua.org/ftp/ \
        | sed -n -r \
            -e 's/.*HREF="lua-([0-9.]+).tar.gz".*/\1/gp' \
        | sort -n -r \
        | head -1
    )

fi

readonly SRC=$HOME/.cache/lua-${VERSION}.tar.gz

if [[ ! -e $SRC ]]; then
    echo "Downloading lua $VERSION to $SRC"

    curl \
        --silent \
        -f \
        --url "https://www.lua.org/ftp/lua-${VERSION}.tar.gz" \
        -o "$SRC"
fi

cd $(mktemp -d)

tar xzf "$SRC"

cd "lua-${VERSION}"

make linux install INSTALL_TOP=$PREFIX
