#!/usr/bin/env bash

set -euo pipefail

readonly REPO=LuaJIT/LuaJIT
readonly PREFIX=$HOME/.local
readonly TAG_URL=https://api.github.com/repos/LuaJIT/LuaJIT/tags

VERSION=${1:-latest}

if [[ $VERSION == latest ]]; then
    VERSION=$(
        gh-helper get-tags "$REPO" \
        | jq -r '.[].name' \
        | sort -r -n \
        | head -1
    )

	# strip leading `v`
	VERSION=${VERSION#v}
fi

echo "installing luajit $VERSION"

SRC=$(cache-get \
    "https://luajit.org/download/LuaJIT-${VERSION}.tar.gz" \
    "luajit-${VERSION}.tar.gz"
)

cd $(mktemp -d)

tar xzf "$SRC"

cd "LuaJIT-${VERSION}"

make PREFIX="$PREFIX"
make install PREFIX="$PREFIX"
